@model IEnumerable<Application.Models.UserModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User accounts</title>
    @await Html.PartialAsync("_BootstrapPartial")
    <style>
        .column-image img {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }
        
        html {
            height: 100%;
        }
        
        .style-n ul li {
            list-style-type: none;
        }
        
        body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }
        
        .text-bigger {
            font-size: 18px;
        }
        
        .navbar-custom .navbar-brand {
            color: #fff;
        }
        .navbar-custom .navbar-nav .nav-link {
            color: #fff;
        }
    </style>
</head>
<body>

@await Html.PartialAsync("_AdminHeaderPartial")

<div class="container text-center">
    <h2 class="text-center mb-4 text-primary">Accounts management</h2>
    <div asp-validation-summary="ModelOnly" class="style-n text-center h2 text-danger text-dec-none"></div>
    <div class="table-responsive my-5" style="max-height: 300px; overflow-y: auto;">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
                <tr style="height: 50px;">
                    <td>
                        @user.FirstName
                    </td>
                    <td>
                        @user.LastName
                    </td>
                    <td>
                        @user.Email
                    </td>
                    <td>
                        @user.RoleName
                    </td>
                    <td>
                        <a class="btn btn-success" type="submit" asp-route-id="@user.Id" asp-controller="Admin" asp-action="GetAdminUpdateAccountPage">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-primary" type="submit" asp-route-id="@user.Id" asp-controller="Admin" asp-action="GetUserOrdersPage">Orders</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" type="submit" asp-route-id="@user.Id" asp-controller="Admin" asp-action="RemoveAccount">Remove</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <a class="btn btn-primary" asp-controller="Admin" asp-action="GetAdminAddUserPage">Add account</a>
</div>


@await Html.PartialAsync("_FooterPartial")
</body>
</html>
