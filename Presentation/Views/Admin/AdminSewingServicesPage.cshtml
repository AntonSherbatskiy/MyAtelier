@model IEnumerable<Application.Models.SewingServiceModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin sewing services</title>
    @await Html.PartialAsync("_BootstrapPartial")
    <style>
        .column-image img {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }
        
        html {
            height: 100%;
        }
        
        .style-n ul li {
            list-style-type: none;
        }
        
        body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }
        
        .text-bigger {
            font-size: 18px;
        }
        
        .navbar-custom .navbar-brand {
            color: #fff;
        }
        .navbar-custom .navbar-nav .nav-link {
            color: #fff;
        }
    </style>
</head>
<body>

@await Html.PartialAsync("_AdminHeaderPartial")

<div class="container text-center">
    <h2 class="text-center mb-4 text-primary">Sewing Services</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger h2 text-dec-none"></div>
    <div class="table-responsive my-5" style="max-height: 300px; overflow-y: auto;">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Service Name</th>
                <th>Estimated completion time</th>
                <th>Price</th>
                <th>Clothing name</th>
                <th>Material name</th>
                <th>Material needed</th>
                <th>Size</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var service in Model)
            {
                <tr style="height: 50px;">
                    <td>
                        @service.ClothingModel.Name Sewing
                    </td>
                    <td>
                        @service.EstimatedDays
                    </td>
                    <td>
                        @service.Price
                    </td>
                    <td>
                        @service.ClothingModel.Name
                    </td>
                    <td>
                        @service.MaterialModel.Name
                    </td>
                    <td>
                        @service.MaterialNeeded
                    </td>
                    <td>
                        @service.ClothingSize
                    </td>
                    <td>
                        @service.Description
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Services" asp-action="RemoveSewingService" asp-route-id="@service.Id">Remove</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <a class="btn btn-primary" asp-controller="Admin" asp-action="GetAdminAddSewingServicePage">Add service</a>
</div>

@await Html.PartialAsync("_FooterPartial")
</body>
</html>